<div class="container modalWindow">
    <h1><span class="form august9-songForm"></span>Edit {{projectname}}</h1>

    <!-- show any messages that come back with authentication -->
    <!--<% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>-->
	<form id ="projectForm"
	     enctype   =  "multipart/form-data"
	     action    =  "/project/edit/{{id}}"
	     method    =  "post">
	  <input type="hidden" name="id" value="{{id}}">
	  <div class="form-group col-xs-12 col-sm-5">   	
			<label for="projectname">Projectname:</label>
			<input class="form-control" type="text" name="projectname" value="{{ projectname }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">   	
			<label for="email">Email:</label>
			<input class="form-control" type="text" name="email" value="{{ email }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">   	
			<label for="about">About:</label>
			<input class="form-control" type="text" name="about" value="{{ about }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">   	
			<label for="influence">Influence:</label>
			<input class="form-control" type="text" name="influence" value="{{ influence }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">   	
			<label for="participator">Participator:</label>
			<input class="form-control" type="text" name="participator" value="{{ participator }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">   	
			<label for="participator_role">Participator Role:</label>
			<input class="form-control" type="text" name="participatorRole" value="{{ participatorRole }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5"> 
				<label for="file">Project image:</label>
				<input class="form-control btn btn-default btn-file" type="file" name="file" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">   	
			<label for="imgalt">Image description:</label>
			<input class="form-control" type="text" name="imgalt" value="{{ imgalt }}" /><br>
		</div>
		<div class="form-group col-xs-12 col-sm-5">                  
				<input class="btn btn-warning " type="submit" value="Edit project" name="submit">
		</div>
	</form>
</div>
<script type="text/javascript">
$(function() {
	console.log("initiating transloadit EDIT");
  $('#projectForm').transloadit({
    wait: true,
    triggerUploadOnFileSelection: true,
    params: {
      auth: { key: "63fac0a0b2c411e5b32187c4376b74f6" },
      steps: {
        resize_to_125: {
          robot: "/image/resize",
          use: ":original",
          width: 250,
          height: 250,
          result: true
        },
        resize_to_75: {
          robot: "/image/resize",
          use: "resize_to_125",
          width: 100,
          height: 100
          //,sepia: 80
        }
      }
      //,notify_url: "https://august9.herokuapp.com/projectTest/"
      //,template_id: "b68e53b051a611e59211375ae6c9147c"
    }
  });
});
</script>