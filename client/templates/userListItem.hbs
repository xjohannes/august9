
	<div id="userImg" class="imgCrop">
		{{#if avatar}}
			<a href="#/user/{{userid}}"><img src="{{avatar}}" /></a>
		{{else}}
			<img src="./media/avatars/default-avatar.jpg" alt="default avatar"/>
		{{/if}}
	</div>
	<a href="#/user/{{userid}}"><p>{{username}}</p></a>
	<p>Id: {{userid}}</p>
	<p>Name: {{firstname}} {{lastname}}</p>
	<a class="admin hidden" href="#/user/{{userid}}/edit">   <button type="button" class="btn" >Edit</button></a>
	<a class="admin hidden" href="#/user/{{userid}}/delete"> <button type="button" class="btn" >Delete</button></a>
	<a class="admin hidden" href="#/user/{{userid}}/newUser"><button type="button" class="btn" >New User</button></a>



